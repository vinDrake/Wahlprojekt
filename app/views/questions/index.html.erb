

<h1>Fragen</h1>

<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.problem %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), question %></td>
        <td><%= link_to (image_tag "pen29.png"), edit_question_path(question) %></td>
        <td><%= link_to (image_tag "delete96.png"), question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Frage', new_question_path %>

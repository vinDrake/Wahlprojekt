    </tr>
  </thead>
  <tbody>
    <% @leaving_messages.each do |message| %>
      <tr>
        <td><%= message.receiver.name %></td>
        <td><%= message.subject %></td>
        <td><%= message.content %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), message %></td>
        <!-- <td><%= link_to (image_tag "pen29.png"), edit_message_path(message) %></td> -->
        <td><%= link_to (image_tag "delete96.png"), message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



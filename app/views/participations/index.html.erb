

<h1>Teilnahmen</h1>

<table>
  <thead>
    <tr>
      <th>Komplett</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participations.each do |participation| %>
      <tr>
        <td><%= participation.user.name %></td>
        <td><%= participation.challenge.name %></td>
        <td><%= participation.complete %></td>
        <td><%= participation.succeeded %></td>
        <td><%= participation.strikes %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), participation %></td>
        <td><%= link_to (image_tag "pen29.png"), edit_participation_path(participation) %></td>
        <td><%= link_to (image_tag "delete96.png"), participation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Teilnahmen', new_participation_path %>

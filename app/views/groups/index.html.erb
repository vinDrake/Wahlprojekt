

<h1>Gruppen</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), group %></td>
        <td><%= link_to (image_tag "pen29.png"), edit_group_path(group) %></td>
        <td><%= link_to (image_tag "delete96.png"), group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Gruppe', new_group_path %>

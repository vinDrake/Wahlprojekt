

<h1>Listing Repleys</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <!-- <td>User</td> -->
      <td>Question</td>
      <td>Given Answer</td>
      <td>Correct Answer</td>
      <td>Points</td>

    </tr>
    <% @repleys.each do |repley| %>
      <tr>
        <!-- <td><%= repley.user.name %></td> -->
        <td><%= repley.question.problem %></td>
        <td><%= repley.answer.answer_body %></td>
        <td><%= repley.question.correct_answer.answer_body if repley.points == 0 %></td>
        <td><%= repley.points %></td>
        <td><%= link_to 'Show', repley %></td>
        <!-- <td><%= link_to 'Edit', edit_repley_path(repley) %></td> -->
        <!-- <td><%= link_to 'Destroy', repley, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>


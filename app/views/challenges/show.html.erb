<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @challenge.name %>
</p>

<p>
  <strong>Alive:</strong>
  <%= @challenge.alive %>
</p>

<p>
  <strong>Max Challenge Time:</strong>
  <%= @challenge.max_challenge_time %> ( 0 = Egal )
</p>

<p>
  <strong>Latest End:</strong>
  <%= @challenge.latest_end %>
</p>

<p>
  <strong>Strict Order:</strong>
  <%= @challenge.strict_order %>
</p>

<p>
  <strong>Strikes:</strong>
  <%= @challenge.strikes %> ( 0 = Egal )
</p>

<p>
<strong>Questions:</strong><br>
<% @challenge.elements.each do |e| %>
  <%= e.question.problem %><br>
<% end %>
</p>

<p>
<strong>Users:</strong><br>
<% @challenge.participations.each do |p| %>
  <%= link_to p.user.name, user_path(p.user) %>(Is complete: <%= p.complete %>)<br>
<% end %>
</p>

<%= link_to 'Edit', edit_challenge_path(@challenge) %> |
<%= link_to 'Add Questions', new_element_path(challenge_id: @challenge) %> |
<%= link_to 'Back', challenges_path %>



<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), tag %></td>
        <td><%= link_to (image_tag "pen29.png"), edit_tag_path(tag) %></td>
        <td><%= link_to (image_tag "delete96.png"), tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Tag', new_tag_path %>

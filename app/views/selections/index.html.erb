

<h1>Auswahlen</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selections.each do |selection| %>
      <tr>
        <td><%= selection.tag.name %></td>
        <td><%= selection.feeder.user.name %></td>
        <td><%= link_to (image_tag "lupe_318-1787.png"), selection %></td>
        <!-- <td><%= link_to (image_tag "pen29.png"), edit_selection_path(selection) %></td> -->
        <td><%= link_to (image_tag "delete96.png"), selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




<h1>Antworten</h1>

<table>
  <thead>
    <tr>
      <th>Korrekt</th>
      <th>Inhalt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.correct %></td>
        <td><%= answer.answer_body %></td>
        <td><%= link_to (image_tag "lupe_318-1787.jpg"), answer %></td>
        <td><%= link_to (image_tag "pen29.png"), edit_answer_path(answer) %></td>
        <td><%= link_to (image_tag "delete96.png"), answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Antwort', new_answer_path %>

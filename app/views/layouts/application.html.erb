<!DOCTYPE html>
<html>
<head>
  <title>QuizStudy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render "partials/navigation" %>

<!-- Messenger Slider -->
<% if current_user %>
    <div id="messages">
      <div  id="button"  >
        <a href="#" onclick="toggle_chat('messages');">
          <%= image_tag "x.svg" %>
        </a>
      </div>
        <%= render "partials/messenger" %>
      </div>
      <div id="aufmachen">
        <div id="button" >
          <a href="#" onclick="toggle_chat('2');">
            <%= image_tag "x.svg" %>
          </a>
        </div>
      </div>
    <% end %>
<!-- Messenger Slider -->

<div align="center">

  <!-- Anfang Pop-Up -->
  <%= render "partials/popup" %>

  <!-- Ende Pop-Up -->

  <%= image_tag "Logo.png" %>

  <%= yield %>

</div>

</body>
</html>
